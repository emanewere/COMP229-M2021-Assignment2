<h1><%= title %></h1>

<div class="row">
    <div class="col">
        <% if(displayName){%>
        <a href="/contact-list/add" id="addButton" class="btn btn-primary mb-1"><i class="fas fa-plus-circle"></i> Add Business Contact List Item</a>
        <% } %>
        <table class="table table-striped table-bordered table-hover">
            <thead class="table-dark">
              <tr>
                <th scope="col">#</th>
                <th scope="col">FullName</th>
                <th scope="col">EmailAddress</th>
                <th scope="col">ContactNumber</th>
                
                <% if(displayName){%>
                <th></th>
                <th></th>
                <% } %>
              </tr>
            </thead>
            <tbody>
                
             <% for(let count = 0; count < contactL.length-1; count++) { %>
                      <% for(let count2 = 0; count2 < contactL.length-count-1; count2++) { %>
              
                            <% if(contactL[count2].FullName>contactL[count2+1].FullName) { %>
              
                              let temp = contactL[count2];
                              contactL[count2] =contactL[count2+1];
                              contactL[(count2)+1] = temp; 

                       <% } %>

                       <% } %>  

              <% } %>  

             <!-- Repeatable Row Template -->   
              
             <% for(let count = 0; count < contactL.length; count++) { %>
              
                <tr>
                    <th scope="row"><%= count + 1 %></th>
                    <td><%= contactL[count].FullName %></td>
                    <td><%= contactL[count].EmailAddress %></td>
                    <td><%= contactL[count].ContactNumber %></td>
                    
                    <% if(displayName){%>
                    <td class="text-center"><a href="/contact-list/edit/<%= contactL[count]._id %>" class="btn btn-primary btn-sm edit"><i class="fas fa-edit fa-sm"></i> Edit</a></td>
                <td class="text-center"><a href="/contact-list/delete/<%= contactL[count]._id %>" class="btn btn-danger btn-sm delete"><i class="fas fa-trash-alt fa-sm"></i> Delete</a></td>
                <% } %>
                </tr>

              <% } %>

            </tbody>
          </table>
    </div>
</div>